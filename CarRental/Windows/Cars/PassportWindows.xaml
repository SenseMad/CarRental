<Window x:Class="CarRental.Windows.Cars.PassportWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SearchCarWindows" Height="200" Width="300" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Background="{x:Null}" Foreground="{x:Null}" WindowStyle="None">
    <Grid Name="Grid" Background="{StaticResource TabControlBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button x:Name="ButtonClose" HorizontalAlignment="Right" Width="30" Style="{StaticResource ButtonClose}"/>
            <TextBlock x:Name="TextBlockName" Text="ПАСПОРТ" Foreground="White" FontSize="15" Margin="10,5,35,5"/>
        </Grid>
    </Grid>
</Window>
